{
  "name": "meal-planner",
  "private": true,
  "type": "module",
  "version": "0.4.0",
  "scripts": {
    "build": "run-p type-check \"build-only {@}\" --",
    "build-only": "vite build",
    "bump": "changeset version",
    "dev": "vite",
    "emulate": "firebase emulators:start --import seed-data",
    "lint": "eslint .",
    "prepare": "husky",
    "preview": "vite preview",
    "release": "run-p build && firebase deploy",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:dev": "vitest",
    "type-check": "vue-tsc --build --force"
  },
  "dependencies": {
    "@fontsource/roboto": "5.2.9",
    "@mdi/font": "7.4.47",
    "firebase": "^12.6.0",
    "vue": "^3.5.25",
    "vue-router": "^4.6.3",
    "vuefire": "^3.2.2",
    "vuetify": "^3.11.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.1",
    "@ionic/prettier-config": "^4.0.0",
    "@tsconfig/node22": "^22.0.5",
    "@types/node": "^24.10.2",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/coverage-v8": "^4.0.15",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.1",
    "eslint-config-vuetify": "4.3.3",
    "eslint-plugin-vue": "^10.6.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.7.4",
    "resize-observer-polyfill": "^1.5.1",
    "sass-embedded": "^1.93.3",
    "typescript": "~5.9.3",
    "unplugin-fonts": "^1.4.0",
    "unplugin-vue-components": "^30.0.0",
    "unplugin-vue-router": "^0.19.0",
    "vite": "^7.2.7",
    "vite-plugin-vue-layouts-next": "^1.3.0",
    "vite-plugin-vuetify": "^2.1.2",
    "vitest": "^4.0.15",
    "vue-tsc": "^3.1.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,md,json}": [
      "prettier --write",
      "eslint"
    ]
  },
  "prettier": "@ionic/prettier-config"
}
